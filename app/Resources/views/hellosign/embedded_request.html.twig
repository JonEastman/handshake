{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row marginTop20">
            <div class="col-xs-12">
                <h1>View Embedded Handshake Request</h1>
            </div>
        </div>
    </div>

    <script type="text/javascript">

        jQuery(document).ready(function(){

            HelloSign.init("{{ clientId }}");
            HelloSign.open({
                url: "{{ signatureUrl }}",
                allowCancel: true,
                debug: true,
                messageListener: function(eventData) {
                    if (eventData.event == HelloSign.EVENT_SIGNED) {

                        // Redirect
                        $(location).attr('href', '{{ url('hellosign_embedded_signed') }}');
                    }
                }
            });
        });

    </script>

{% endblock %}